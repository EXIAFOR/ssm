<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false"
               xmlns="http://ch.qos.logback/xml/ns/logback"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ch.qos.logback/xml/ns/logback
               https://raw.githubusercontent.com/enricopulatzo/logback-XSD/master/src/main/xsd/logback.xsd">
  <!--  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>-->
  <conversionRule conversionWord="customColor" converterClass="cn.exiafor.log.LogbackColorful"/>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %cyan(%d{yyyy-MM-dd}) %magenta(%d{HH:mm:ss.SSS}) [%cyan(%thread)] %customColor(%-5level) %cyan(%logger{20}) %magenta(%method) : %customColor(%msg) %n
      </pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="console"/>
  </root>
</configuration>
